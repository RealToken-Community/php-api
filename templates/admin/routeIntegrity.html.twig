{% extends "base.html.twig" %}

{% block title %}[ADMIN] Check route integrity{% endblock %}

{% block body %}
<div class="container">
    <h3>[{{ envServer }}] Routes ({{ totalTokens }} tokens)</h3>
    {% for route in routes %}
        <div class="col-12">
            <div class="row">
                <div class="col-2 url">{{ route.url }}</div>
                {% if route.response.error is defined %}
                    <div class="col-2 text-danger code">{{ route.response.error.code }}</div>
                    <div class="col-8 text-danger message">{{ route.response.error.message }}</div>
                {% else %}
                    <div class="col-2 text-success code">200</div>
                    <div class="col-8 text-success message">{{ route.response }}</div>
                {% endif %}
            </div>
        </div>
    {% endfor %}
    </div>
</div>
{% endblock %}
